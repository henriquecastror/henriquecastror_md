 hc<-hcmap(
      map = "custom/world-highres3", 
      data = dat, 
      joinBy = "iso-a3",
      value = "GDP",
      showInLegend = FALSE, 
      nullColor = "#DADADA",
      download_map_data = TRUE) %>%
      hc_mapNavigation(enabled = TRUE) %>%
      hc_legend(align = "center",
                verticalAlign = "top",
                layout = "horizontal",
                x = 100,
                y = 0) %>%
      hc_title(text = "GDP Growth in 2019 for selected Countries")
